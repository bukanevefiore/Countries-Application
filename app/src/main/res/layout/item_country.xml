<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
        <variable
            name="country"
            type="com.examp.countries.model.Country" />

        <variable
            name="listener"
            type="com.examp.countries.adapter.CountryClickListener" />
    </data>

<LinearLayout
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:onClick="@{listener::onCountryClicked}"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/countryUuidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@{String.valueOf(country.uuid)}"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:src="@mipmap/ic_launcher_round"
        android:layout_height="match_parent"
        android:downloadUrl="@{country.flag}"
        android:padding="5dp"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@{country.countryName}"></TextView>

        <TextView
            android:id="@+id/region"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="@{country.countryRegion}"></TextView>

    </LinearLayout>


</LinearLayout>
</layout>